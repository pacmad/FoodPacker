<h1><%= t('.title') %></h1>

<p><%= t('.no_account')%> <%= link_to t('.sign_up'), signup_path %></p>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :login, t('.name_or_email') %><br />
    <%= text_field_tag :login, params[:login] %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </p>
  <p><%= submit_tag t('.login') %></p>
<% end %>
