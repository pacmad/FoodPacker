<% title t('.title') %>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :login, t('.name_or_email') %><br />
    <%= text_field_tag :login, params[:login] %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </p>
  <p><%= submit_tag t('.login') %></p>
<% end %>
