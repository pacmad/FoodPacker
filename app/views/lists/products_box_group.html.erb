<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("boxes.plural")}", lists_path  %></li>
      <li class=""><%= link_to "Produktliste Kisten", products_overview_list_path  %></li>
      <li class=""><%= link_to "Produktliste Gesamt", products_aggregate_list_path  %></li>
      <li class="active"><%= link_to "Kisten Packliste (#{@group.name})", products_box_list_path(params[:box_id])  %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      <div style="float:right"><%= link_to "Drucken", products_box_group_list_path(group_id: params[:group_id],box_id:params[:box_id]) + ".print" %></div>
      <h2><%= @group.name %></h2>
      <p style="float:right;">Stand: <%= l(@last_updated) if @last_updated %></p>
      <table>
        <% @group_box_contents.each do |content| %>
        <tr>
          <td><%= content.human_readable_quantity %></td>
          <td><%= content.product.name %></td>
        </tr>
        <% end %>
      </table>    
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>