<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", meals_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_meal_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", meal_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.meal.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @meal.name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.meal.time", :default => t("activerecord.labels.time", :default => "Time")) %>:</b>
          <%= l(@meal.time) %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.meal.receipts", :default => t("activerecord.labels.receipts", :default => "Receipts")) %>:</b>
          <%= @meal.receipts.collect(&:name).to_sentence %>
        </p>

      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_meal_path(@meal), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), meal_path(@meal), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>