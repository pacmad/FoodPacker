<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", groups_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_group_path %></li>
      <li class="active"><%= link_to t("groups.plural"), list_groups_for_box_path(@box)%></li
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("groups.plural") + " for " + @box.name %></h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.group.name", :default => t("activerecord.labels.name", :default => "Name")) %>
          </th>
          <th><%= t("activerecord.attributes.group.participants_count", :default => "Participants Count")  %></th>
          <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @groups.each do |group| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= group.id %>
          </td>
          <td>
            <%= link_to group.name, calculate_group_box_with_box_path(@box.id, group_id: group.id) %>
          </td>
          <td>
            <%= group.participants_count %>
          </td>
          <td>
            <%= l(group.created_at) %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", calculate_group_box_with_box_path(@box.id, group_id: group.id) %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
