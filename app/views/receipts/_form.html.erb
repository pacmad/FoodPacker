
  <div class="group">
    <%= f.label :name, t("activerecord.attributes.receipt.name", :default => "Name"), :class => :label %>
    <%= f.text_field :name, :class => 'text_field' %>
    <span class="description">Ex: Chilli con Carne</span>
  </div>
  <div class="group">
<h2><%= Receipt.human_attribute_name('ingredients') %></h2>
<%= f.fields_for :ingredients do |ingredients_fields| %>

  <%= ingredients_fields.label :quantity %>
  <%= ingredients_fields.text_field :quantity, :size => 5 %>
  <%= ingredients_fields.label :product_id %>
  <%= ingredients_fields.collection_select :product_id, Product.all, :id, :name %>
  <%= ingredients_fields.link_to_remove t('receipts.actions.remove_ingredient') %>

<% end %>
  </div>

<p><%= f.link_to_add t('receipts.actions.add_ingredient'), :ingredients %></p>
        
<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>
  <span class="text_button_padding"><%= t("web-app-theme.or", :default => "or") %></span>
	<%= link_to t("web-app-theme.cancel", :default => "Cancel"), receipts_path, :class => "text_button_padding link_button" %>
</div>